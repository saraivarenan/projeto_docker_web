pipeline {
    agent any
    tools{
    maven '3.8.5'
    }
    stages {
        stage('chamando o Docker imagem'){
            steps{
                bat "docker-compose up -d"
            }
        }
        stage('Build') {
            steps {
               bat 'mvn test'
            }
        }
        stage('Matando a imagem do docker'){
            steps{
                bat 'docker stop $(docker ps -a -q)'
                bat 'docker rm $(docker ps -a -q)'
                }
        }
    }
}
